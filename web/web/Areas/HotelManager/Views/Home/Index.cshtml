<!--主布局容器-->
<div id="cntr_Container">
    <div class="layui-layout-admin">
        <!--头部-->
        <div class="layui-header">
            <!--菜单伸缩/页面刷新-->
            <div class="layui-layout-left">
                <ul class="layui-nav">
                    <li class="layui-nav-item">
                        <a click-event="flexible"><i class="layui-icon layui-icon-shrink-right" id="icon_flexible"></i></a>
                    </li>
                    <li class="layui-nav-item">
                        <a click-event="refresh"><i class="layui-icon layui-icon-refresh"></i></a>
                    </li>
                </ul>
            </div>
            <!--全屏展示/用户登录信息-->
            <div class="layui-layout-right">
                <ul class="layui-nav">
                    <li class="layui-nav-item">
                        <a click-event="fullScreen"><i class="layui-icon layui-icon-screen-full"></i></a>
                    </li>
                    <li class="layui-nav-item">
                        <a><img src="~/Content/images/headimg.jpg"  class="layui-nav-img" />@Session["AadminName"]</a>
                        <dl class="layui-nav-child">
                            <dd>
                                <a>基本资料</a>
                            </dd>
                            <dd>
                                <a>修改密码</a>
                            </dd>
                            <hr />
                            <dd>
                                <a>退出登录</a>
                            </dd>
                        </dl>
                    </li>
                </ul>
            </div>
        </div>
        <!--左侧导航菜单-->
        <div class="layui-side layui-side-menu">
            <div class="layui-side-scroll">
                <div class="layui-logo">
                    <img src="~/Content/images/headimg.jpg" />
                    <p>酒店管理系统</p>
                </div>
                <ul class="layui-nav layui-nav-tree" lay-shink="all" id="menu_side">
                    <li class="layui-nav-item layui-nav-itemed" >
                        <a>
                            <i class="layui-icon layui-icon-home"></i>
                            <cite>主页</cite>
                        </a>
                        <dl class="layui-nav-child">
                            <dd class="layui-this">
                                <a lay-href="/HotelManager/SysAdmin/AdminMain">控制台</a>
                            </dd>                           
                        </dl>
                    </li>
                    <li class="layui-nav-item layui-nav-itemed">
                        <a>
                            <i class="layui-icon layui-icon-diamond"></i>
                            <cite>公司管理</cite>
                        </a>
                        <dl class="layui-nav-child">
                            <dd >
                                <a lay-href="/HotelManager/Dishes/Index">菜品管理</a>
                            </dd>
                            <dd >
                                <a lay-href="/HotelManager/DishesBook/Index">订单管理</a>
                            </dd>
                            <dd >
                                <a lay-href="/HotelManager/News/Index">新闻管理</a>
                            </dd>
                            <dd>
                                <a lay-href="/HotelManager/Suggestion/Index">投诉管理</a>
                            </dd>
                            <dd>
                                <a lay-href="/HotelManager/Recruitment/Index">招聘管理</a>
                            </dd>
                        </dl>
                    </li>
                </ul>
            </div>
        </div>
        <!--页面标签区-->
        <div class="layadmin-pagetabs">
            <!--右侧下拉菜单（关闭当前/关闭其他/关闭所有）-->
            <div class="layadmin-tabs-control layui-icon layui-icon-down">
                <ul class="layui-nav layadmin-tabs-select">
                    <li class="layui-nav-item" lay-unselect>
                        <a>
                            <dl class="layui-nav-child layui-anim-fadein">
                                <dd>
                                    <a click-event="closeThis">关闭当前标签页</a>
                                </dd>
                                <dd>
                                    <a click-event="closeOther">关闭其他标签页</a>
                                </dd>
                                <dd>
                                    <a click-event="closeAll">关闭全部标签页</a>
                                </dd>
                            </dl>
                        </a>
                    </li>                    
                </ul>
            </div>
            <!--页面标签选项卡-->
            <div class="layui-tab" lay-allowClose="true" lay-filter="layout-tab">
                <ul class="layui-tab-title" id="tab_Titles">
                    <li class="layui-this" lay-id="/HotelManager/SysAdmin/AdminMain">
                        <i class="layui-icon layui-icon-home"></i>
                    </li>
                </ul>
            </div>
        </div>
        <!--主内容区-->
        <div class="layui-body" id="tab_Bodys">
            <div class="layadmin-tabsbody-item layui-show">
                <iframe src="/HotelManager/SysAdmin/AdminMain" frameborder="0" class="layadmin-iframe"></iframe>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    layui.cache.model = {
        modelName: 'home',
        pageName:'home'
    }
</script>