
@section css{
   <link href="~/Areas/HotelManager/CSS/Login.css" rel="stylesheet" />
}
    

    <div id="panl">
        @using (Ajax.BeginForm("AdminLogin", "SysAdmin", new AjaxOptions() { OnComplete = "Login" }))
        {
            <div class="layui-form">
                <div class="layui-form-item">
                   <h2 ><label>账号登录</label></h2>
                </div>
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <div class="layui-input-inline">
                            <input type="text" class="layui-input" lay-verify="required" name="LoginId" id="LoginId" placeholder="请输入用户名" />
                        </div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <div class="layui-input-inline">
                            <input type="password" class="layui-input" lay-verify="required" name="LoginPwd" id="LoginPwd" placeholder="请输入密码" />
                        </div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <div class="layui-input-inline">
                            <button class="layui-btn layui-btn-radius" lay-submit>登&nbsp;&nbsp;&nbsp;&nbsp;录</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>


    <script type="text/javascript">
        //票据过期之后，防止登录页面跑到iframe层中去
        if (window.top!=window.self) {
            window.top.location.href = window.self.location.href;
        }

        layui.use(['form', 'jquery', 'unobtrusive'], function () {
            var form = layui.form,
                unobtrusive = layui.unobtrusive,
                layer = top.layer,
                $ = layui.$;

            //登录后的回调
            window.Login = function (res) {
                if (res.responseText == "0") {
                    layer.msg("用户名或密码错误！请重新输入");
                }
                if (res.responseText == "1") {
                    window.location.href = "@Url.Action("Index","Home")";
                }
            };

        })
    </script>

